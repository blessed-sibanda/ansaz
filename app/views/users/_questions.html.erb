<% user.questions.each do |question| %>
  <% if question.group %>
    <% if policy(question.group).participate? %>
      <%= render 'shared/card_item' do %>
        <%= link_to question.title, question, class: 'card-title h5 text-decoration-none' %>
      <% end %>
    <% end %>
  <% else %>
    <%= render 'shared/card_item' do %>
      <%= link_to question.title, question, class: 'card-title h5 text-decoration-none' %>
    <% end %>
  <% end %>
<% end %>
